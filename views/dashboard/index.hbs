<!DOCTYPE html>

<html>
<head>
    <title>LOYL Admin</title>

    <!-- Material Design fonts -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/dashboard.css">
</head>

<body class="loyalty-dashboard" id="companies" role="document">

<nav class="navbar navbar-default navbar-static-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <!--<a class="navbar-brand" href="/dashboard"><img src="/static/img/quire-logo.png" class="nav-logo"></a>-->
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/dashboard">My Companies</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account</a>
                    <ul class="dropdown-menu">
                        <li><a href="/dashboard/logout">Sign out</a></li>
                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container theme-showcase" id="main" role="main" data-email="{{ user.email }}" data-stripe-pk="{{ stripeKey }}">

    <div class="section-heading clearfix">
        <button class="create-company btn btn-large btn-primary btn-raised pull-right">Set up your company</button>
        <h2>My Companies</h2>
    </div>

    <div class="row main-list-container">

        <!-- Companies -->
        {{#each companies}}
            <div class="companies-list-item" data-id="{{ this.id }}">
                <div class="panel panel-info">
                    <div class="panel-body">
                        <a href="/dashboard/company/{{ this.slug }}" class="panel-title">
                            <h3>{{ this.name }}</h3>
                        </a>
                    </div>
                </div>
            </div>
        {{/each}}

    </div>
</div>

<script type="text/template" id="errorViewTemplate">
    <div class="error">
        <h1><i class="glyphicon glyphicon-exclamation-sign"></i> <%= error %></h1>
    </div>
</script>

<script type="text/template" id="loadingViewTemplate">
    <div class="loading">
        <div class="spinner">
            <div class="cube1"></div>
            <div class="cube2"></div>
        </div>
    </div>
</script>

<script data-main="/javascripts/dashboard/main" src="/javascripts/dashboard/libs/require.js"></script>
</body>

</html>
