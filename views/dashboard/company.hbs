<!DOCTYPE html>

<html>
<head>
    <title>LOYL Admin</title>

    <!-- Material Design fonts -->
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Roboto:300,400,500,700">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

    <link rel="stylesheet" href="/stylesheets/dashboard.css">
</head>

<body class="loyalty-dashboard" id="company" role="document">

<nav class="navbar navbar-default navbar-static-top">
    <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <!--<a class="navbar-brand" href="/dashboard"><img src="/static/img/quire-logo.png" class="nav-logo"></a>-->
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                <li><a href="/dashboard">My Companies</a></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account</a>
                    <ul class="dropdown-menu">
                        <li><a href="/dashboard/logout">Sign out</a></li>
                    </ul>
                </li>
            </ul>
        </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
</nav>

<div class="container theme-showcase" id="main" role="main" data-company-id="{{ company.id }}" data-email="{{ user.email }}" data-stripe-pk="{{ stripeKey }}">
    <div class="page-header">
        <h1>{{ company.name }}</h1>
    </div>

    <div class="section-heading">
        <h2>Locations</h2>
    </div>

    <div class="row main-list-container">

        <!-- Locations -->
        {{#each locations}}
        <div class="col-sm-4">
            <div class="panel panel-info">
                <div class="panel-body">
                    <a href="#" class="panel-title edit-location" data-location-id="{{ this.id }}">
                        <h3>{{ this.name }}</h3>
                    </a>
                    <p>{{ this.address }}</p>

                    {{#if this.reward}}
                    <p><strong>Reward:</strong> {{ this.reward.name }}</p>
                    {{else}}
                    <p><strong>No reward set</strong></p>
                    {{/if}}

                    {{#if this.subscription}}
                    <p><strong>Active:</strong> {{ this.subscription.name }}</p>
                    {{else}}
                    <p><strong>No active subscription</strong></p>
                    {{/if}}
                </div>
            </div>
        </div>
        {{/each}}

        <div class="col-sm-4">
            <button class="create-location btn btn-primary btn-raised card-button">+ Add a location</button>
        </div>

    </div>

    <div class="row main-list-container">

        <!-- Rewards -->
        <div class="list-table panel panel-default">
            <div class="panel-heading">Rewards</div>
            <table class="table" id="rewards-list">
                <thead>
                <tr>
                    <th>Name</th>
                    <th>Checkins required to earn</th>
                    <th># of checkins</th>
                    <th># earned</th>
                    <th># redeemed</th>
                </tr>
                </thead>
                <tbody>
                {{#each rewards}}
                <tr data-id="{{ company.id }}">
                    <td><a href="#" class="edit-reward" data-reward-id="{{ this.id }}"><strong>{{ this.name }}</strong></a></td>
                    <td>{{ this.checkinsRequired }}</td>
                    <td>{{ this.checkins }}</td>
                    <td>{{ this.earned }}</td>
                    <td>{{ this.redeemed }}</td>
                </tr>
                {{/each}}
                </tbody>
            </table>
            <button class="create-reward btn btn-primary btn-raised">Create a reward</button>
        </div>

    </div>
</div>


<script type="text/template" id="errorViewTemplate">
    <div class="error">
        <h1><i class="glyphicon glyphicon-exclamation-sign"></i> <%= error %></h1>
    </div>
</script>

<script type="text/template" id="loadingViewTemplate">
    <div class="loading">
        <div class="spinner">
            <div class="cube1"></div>
            <div class="cube2"></div>
        </div>
    </div>
</script>

<script type="text/template" id="companyRewardsListTemplate">
    {{#each rewards}}
    <option value="{{ this.id }}">{{ this.name }}</option>
    {{/each}}
</script>

<script data-main="/javascripts/dashboard/main" src="/javascripts/dashboard/libs/require.js"></script>
</body>

</html>
